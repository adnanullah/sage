	AString getTitle();

	PRBool hasDescription();
	AString getDescription();
	
	AString getLink();
	
	PRBool hasAuthor();
	AString getAuthor();

	PRBool hasLastPubDate();
	PRTime getLastPubDate();

	PRInt32 getItemCount();
	
	sageIFeedItem getItem(in PRInt32 index);
	
	void setSort(in unsigned short order);
	
	AString getFormat();
	
	AString getSignature();

